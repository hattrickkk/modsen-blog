{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"target": "esnext",
		"module": "esnext",
		"outDir": "build",
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"sourceMap": true,
		"rootDir": ".",
		"plugins": [
			{
				"name": "next"
			}
		],
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/__mocks__",
		"src/__tests__"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}