{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "esnext",
        "module": "esnext",
        "outDir": "build",
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "types": ["@testing-library/jest-dom/jest-globals"],
        "rootDir": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/__mocks__",
        "**/__tests__",
        "i18n.js"
    ],
    "exclude": ["node_modules", "build", "storybook-static"]
}
